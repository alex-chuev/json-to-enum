{
  "name": "json-to-enum",
  "version": "1.0.0",
  "description": "Creates TypeScript Enums based on JSON files",
  "main": "dist/index.js",
  "bin": {
    "json-to-enum": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "watch": "tsc -w",
    "build": "tsc",
    "test": "jest",
    "prepublish": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alex-chuev/json-to-enum.git"
  },
  "keywords": [
    "json",
    "enum",
    "cli"
  ],
  "author": "Alex Chuev <alex@chuev.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alex-chuev/json-to-enum/issues"
  },
  "homepage": "https://github.com/alex-chuev/json-to-enum#readme",
  "dependencies": {
    "chalk": "^3.0.0",
    "inquirer": "^7.0.3",
    "yargs": "^15.1.0"
  },
  "devDependencies": {
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.6",
    "@types/yargs": "^15.0.0",
    "husky": "^4.0.6",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.3.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --single-quote=true --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false
  }
}
